@using Nop.Core.Domain.Seo
@inject SeoSettings seoSettings

@{
    Layout = "_ColumnsOne";

    //title
    if (!string.IsNullOrEmpty(seoSettings.HomepageTitle))
    {
        Html.AddTitleParts(seoSettings.HomepageTitle);
    }

    //meta
    if (!string.IsNullOrEmpty(seoSettings.HomepageDescription))
    {
        Html.AddMetaDescriptionParts(seoSettings.HomepageDescription);
    }

    //page class
    Html.AppendPageCssClassParts("html-home-page");

    Html.AppendCssFileParts("https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css");
    Html.AppendCssFileParts("https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css");
    Html.AppendCssFileParts("~/Themes/BookingTheme/Content/css/datepicker.styles.css");
    Html.AddScriptParts(ResourceLocation.Head, "https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js");
    Html.AppendScriptParts(ResourceLocation.Footer, "~/Themes/BookingTheme/Content/js/banner.js");
    
    Html.AppendScriptParts(ResourceLocation.Footer, "~/Themes/BookingTheme/Content/js/promotion.js");
    Html.AppendScriptParts(ResourceLocation.Footer, "~/Themes/BookingTheme/Content/js/destination.js");
    Html.AppendScriptParts(ResourceLocation.Footer, "~/Themes/BookingTheme/Content/js/discovery.js");
    Html.AppendScriptParts(ResourceLocation.Footer, "~/Themes/BookingTheme/Content/js/user_manual.js");
}
@await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.HomepageTop })
